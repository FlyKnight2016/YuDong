<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_lead"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_lead_picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/littleGray">
    </android.support.v4.view.ViewPager>

    <TextView
        android:id="@+id/tv_lead_skip"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20px"
        android:text="点击进入"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20px"
        android:layout_marginRight="20px"
        android:textColor="@color/white"
        android:background="@drawable/btn_back_border_white"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20px"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/lead_point0"
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_margin="10px"
            android:background="@drawable/point"
            android:alpha="0.4"/>
        <ImageView
            android:id="@+id/lead_point1"
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_margin="10px"
            android:background="@drawable/point"
            android:alpha="0.4"/>
        <ImageView
            android:id="@+id/lead_point2"
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_margin="10px"
            android:background="@drawable/point"
            android:alpha="0.4"/>
        <ImageView
            android:id="@+id/lead_point3"
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_margin="10px"
            android:background="@drawable/point"
            android:alpha="0.4"/>

    </LinearLayout>

</RelativeLayout>

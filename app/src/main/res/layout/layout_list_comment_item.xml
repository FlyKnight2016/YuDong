<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <net.zgyejy.yudong.view.XCRoundRectImageView
            android:id="@+id/iv_commentList_portrait"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/icon"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/tv_commentList_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_commentList_portrait"
            android:layout_toRightOf="@id/iv_commentList_portrait"
            android:text="用户名"
            android:textColor="#AA000000"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/tv_commentList_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_commentList_portrait"
            android:layout_toRightOf="@id/iv_commentList_portrait"
            android:text="2015-10-25 09:48"/>

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_commentList_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="评论内容()...................."/>
</LinearLayout>

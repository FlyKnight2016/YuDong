<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_table_top"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_weight="0"
        android:background="@color/themeColor">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="育栋教育"
            android:textSize="44px"
            android:textColor="@color/white"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/iv_tableTop_user"
            android:layout_width="50px"
            android:layout_height="50px"
            android:src="@drawable/user_white"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20px"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_tableTop_recommend"
        android:layout_width="match_parent"
        android:layout_height="370px"
        android:layout_weight="0"
        android:background="@color/lightGray">

    </android.support.v4.view.ViewPager>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20px"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20px"
                    android:layout_height="match_parent"
                    android:background="@color/themeColor"/>
                <TextView
                    android:id="@+id/tv_tableTop_toVideo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5px"
                    android:layout_marginLeft="20px"
                    android:text="教学视频"
                    android:textColor="@color/themeColor"
                    android:textSize="36px"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_tableTop_to51Video"
                    style="@style/Style_TableTopClickableText"
                    android:text="五个一\n#5To1"
                    android:background="@drawable/text_view_back_button"/>
                <TextView
                    android:id="@+id/tv_tableTop_toFreeVideo"
                    style="@style/Style_TableTopClickableText"
                    android:text="免费\n#Free"
                    android:background="@drawable/text_view_back_button"/>
                <TextView
                    android:id="@+id/tv_tableTop_toVipVideo"
                    style="@style/Style_TableTopClickableText"
                    android:layout_marginRight="20px"
                    android:text="收费\n#VIP"
                    android:background="@drawable/text_view_back_button"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20px"
                    android:layout_height="match_parent"
                    android:background="@color/themeColor"/>
                <TextView
                    android:id="@+id/tv_tableTop_toStudy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5px"
                    android:layout_marginLeft="20px"
                    android:text="学习园地"
                    android:textColor="@color/themeColor"
                    android:textSize="36px"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_tableTop_toPrincipalStudy"
                    style="@style/Style_TableTopClickableText"
                    android:text="园长\n#Leader"
                    android:background="@drawable/text_view_back_button"/>
                <TextView
                    android:id="@+id/tv_tableTop_toTeacherStudy"
                    style="@style/Style_TableTopClickableText"
                    android:text="教师\n#Teacher"
                    android:background="@drawable/text_view_back_button"/>

                <TextView
                    android:id="@+id/tv_tableTop_toParentsStudy"
                    style="@style/Style_TableTopClickableText"
                    android:text="父母\n#Parents"
                    android:background="@drawable/text_view_back_button"/>

                <TextView
                    android:id="@+id/tv_tableTop_toKidStudy"
                    style="@style/Style_TableTopClickableText"
                    android:layout_marginRight="20px"
                    android:text="儿童\n#Kid"
                    android:background="@drawable/text_view_back_button"/>
            </LinearLayout>
            
            <ImageView
                android:id="@+id/iv_tableTop_toHomeWeb"
                android:layout_width="match_parent"
                android:layout_height="90px"
                android:background="@color/lightGray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20px"
                    android:layout_height="match_parent"
                    android:background="@color/themeColor"/>
                <TextView
                    android:id="@+id/tv_tabletop_toAct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5px"
                    android:layout_marginLeft="20px"
                    android:text="活动中心"
                    android:textColor="@color/themeColor"
                    android:textSize="36px"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20px">
                <ImageView
                    android:id="@+id/iv_tableTop_act"
                    android:layout_width="220px"
                    android:layout_height="200px"
                    android:background="@color/lightGray"/>
                <TextView
                    android:id="@+id/tv_tableTop_act_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_tableTop_act"
                    android:layout_marginLeft="30px"
                    android:text="活动标题"
                    android:textSize="36px"
                    android:textStyle="bold"
                    android:maxLines="1"/>
                <TextView
                    android:id="@+id/tv_tableTop_act_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/tv_tableTop_act_title"
                    android:layout_below="@id/tv_tableTop_act_title"
                    android:layout_marginTop="10px"
                    android:text="2016-08-01 - 2016-08-31"
                    android:textColor="@color/deepOrange"/>
                <TextView
                    android:id="@+id/tv_tableTop_act_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/tv_tableTop_act_date"
                    android:layout_below="@id/tv_tableTop_act_date"
                    android:layout_marginTop="10px"
                    android:text="选手要求：不限年龄、不限性别、不限身份、不限国籍、不限人数..."
                    android:maxLines="3"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20px"
                    android:layout_height="match_parent"
                    android:background="@color/themeColor"/>
                <TextView
                    android:id="@+id/tv_tableTop_toShow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5px"
                    android:layout_marginLeft="20px"
                    android:text="秀一秀"
                    android:textColor="@color/themeColor"
                    android:textSize="36px"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>

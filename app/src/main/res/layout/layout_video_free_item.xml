<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:paddingBottom="10px"
              android:paddingTop="10px">

    <ImageView
        android:id="@+id/iv_video_free"
        android:layout_width="300px"
        android:layout_height="200px"
        android:background="@drawable/icon"
        android:paddingBottom="10px"
        android:paddingTop="10px"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="10px"
        android:paddingTop="10px"
        android:paddingLeft="20px">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_video_free_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="视频名称..."
                android:textSize="36px"
                android:textColor="@color/themeColor"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_video_free_browsed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="浏览0次"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_video_free_intro"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10px"
            android:maxLines="3"
            android:text="视频简介..."/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_video_free_collect"
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_weight="0"
                android:src="@drawable/collect"/>
            <TextView
                android:id="@+id/tv_video_free_collect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="20px"
                android:text="0"
                android:textStyle="bold"/>
            <ImageView
                android:id="@+id/iv_video_free_comment"
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_weight="0"
                android:src="@drawable/comment"/>
            <TextView
                android:id="@+id/tv_video_free_comment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="20px"
                android:text="0"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>

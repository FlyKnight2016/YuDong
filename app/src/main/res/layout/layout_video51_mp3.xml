<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_back"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="@color/themeColor">
        <ImageView
            android:id="@+id/mp3PlayBack"
            android:layout_width="70px"
            android:layout_height="70px"
            android:layout_marginLeft="20px"
            android:layout_centerVertical="true"
            android:background="@drawable/return2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="mp3播放"
            android:textSize="44px"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_mp3_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="50px"
        android:background="@color/lightGray"
        android:gravity="center"
        android:text="暂无MP3数据"
        android:textColor="@color/themeColor"
        android:textSize="36px"
        android:textStyle="bold"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tv_mp3_callList"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mp3列表"
            android:textColor="@color/themeColor"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30px"
            android:padding="15px"
            android:background="@drawable/btn_back_border_theme"/>


        <ImageView
            android:id="@+id/iv_mp3_cd"
            android:layout_width="600px"
            android:layout_height="600px"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:src="@drawable/cd" />

        <ImageView
            android:id="@+id/iv_mp3_needle"
            android:layout_width="450px"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_mp3_cd"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="50px"
            android:adjustViewBounds="true"
            android:src="@drawable/needle" />

        <ListView
            android:visibility="gone"
            android:id="@+id/lv_mp3_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30px"
            android:layout_marginLeft="30px"
            android:layout_below="@id/tv_mp3_callList"
            android:background="@drawable/dialog_back_border_gray">
        </ListView>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20px"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="分享"/>

        <TextView
            android:layout_width="100px"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="后退" />

        <TextView
            android:layout_width="160px"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="播放/暂停" />

        <TextView
            android:layout_width="100px"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="前进" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="下载" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_mp3_share"
            android:layout_width="0dp"
            android:layout_height="80px"
            android:layout_marginRight="20px"
            android:layout_weight="1"
            android:src="@drawable/share2"/>

        <ImageView
            android:id="@+id/iv_mp3_back"
            android:layout_width="100px"
            android:layout_height="100px"
            android:src="@drawable/mp3back2" />

        <ImageView
            android:id="@+id/iv_mp3_play"
            android:layout_width="120px"
            android:layout_height="120px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:src="@drawable/mp3play2" />

        <ImageView
            android:id="@+id/iv_mp3_front"
            android:layout_width="100px"
            android:layout_height="100px"
            android:src="@drawable/mp3front2" />

        <ImageView
            android:id="@+id/iv_mp3_downLoad"
            android:layout_width="0dp"
            android:layout_height="80px"
            android:layout_marginLeft="20px"
            android:layout_weight="1"
            android:src="@drawable/mp3download" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="-10px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_mp3_timeNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00" />

        <SeekBar
            android:id="@+id/sb_mp3_progress"
            style="@style/Widget.SeekBar.Normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_mp3_timeAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00" />

    </LinearLayout>
</LinearLayout>

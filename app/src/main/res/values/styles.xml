<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/transparent</item>
        <item name="colorPrimaryDark">@color/darkThemeColor</item>
        <item name="colorAccent">@color/themeColor</item>
    </style>

    <!--主引导界面可点击ImageView的style-->
    <style name="Style_TableTopToVideo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">100px</item>
        <item name="android:layout_marginTop">10px</item>
        <item name="android:layout_marginLeft">20px</item>
        <item name="android:layout_marginBottom">20px</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <!--主引导界面可点击TextView的style-->
    <style name="Style_TableTopClickableText2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">95px</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">10px</item>
        <item name="android:layout_marginLeft">20px</item>
        <item name="android:layout_marginBottom">20px</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32px</item>
    </style>

    <!-- 主页面下方导航TextView的style -->
    <style name="Style_HomeGuideImage">
        <item name="android:layout_width">60px</item>
        <item name="android:layout_height">60px</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <!-- 主页面下方导航TextView的style -->
    <style name="Style_HomeGuideText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">32px</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:padding">6px</item>
    </style>

    <!-- videoFragment上方导航TextView的style -->
    <style name="Style_VideoGuideText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">32px</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10px</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/themeColor</item>

    </style>

    <!--育栋七巧板智力阅读界面style-->
    <style name="Style_51LlH1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="Style_51LlV1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">10px</item>
    </style>
    <style name="Style_51Iv1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
    </style>
    <style name="Style_51Tv1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10px</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">36px</item>
        <item name="android:gravity">center</item>
    </style>


    <!-- GIF动画所用 -->
    <declare-styleable name="GifView">
        <attr name="gif" format="reference"/>
        <attr name="paused" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="CustomTheme">
        <attr name="gifViewStyle" format="reference"/>
    </declare-styleable>

    <!--数据加载缓冲动画的style-->
    <style name="loading_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--Dialog的windowFrame框为无-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">true</item><!--是否为半透明-->
        <item name="android:windowNoTitle">true</item><!--是否显示title-->
        <item name="android:windowBackground">@color/transparent</item><!--设置Dialog的背景-->
        <item name="android:backgroundDimEnabled">false</item><!--背景是否模糊显示-->
    </style>

    <style name="Widget_GifView"></style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!--自定义视频播放器style-->
    <style name="MediaButtonCompat">
        <item name="android:background">@null</item>
        <item name="android:layout_width">71dip</item>
        <item name="android:layout_height">52dip</item>
    </style>

    <style name="MediaButtonCompat.Previous">
        <item name="android:src">@drawable/vvc_ic_media_previous</item>
    </style>

    <style name="MediaButtonCompat.Next">
        <item name="android:src">@drawable/vvc_ic_media_next</item>
    </style>

    <style name="MediaButtonCompat.Play">
        <item name="android:background">@drawable/vvc_ic_media_play</item>
    </style>

    <style name="MediaButtonCompat.Ffwd">
        <item name="android:src">@drawable/vvc_ic_media_ff</item>
    </style>

    <style name="MediaButtonCompat.Rew">
        <item name="android:src">@drawable/vvc_ic_media_rew</item>
    </style>

    <style name="MediaButtonCompat.Pause">
        <item name="android:src">@drawable/vvc_ic_media_pause</item>
    </style>

    <!--mp3播放seekBar-->
    <style name="Widget.SeekBar.Normal" parent="@android:style/Widget.SeekBar">
        <item name="android:maxHeight">16px</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/seekbar_horizontal</item>
        <item name="android:minHeight">16px</item>
        <item name="android:thumb">@drawable/mp3point</item>
        <item name="android:thumbOffset">10px</item>
    </style>

    <!-- 设置弹出窗口的属性，frame叠加，isfloat是否浮动，tarnslucent是否半透明，dim是背景是否变暗 -->
    <style name="Theme_audioDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>
